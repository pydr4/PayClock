<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.izl0gc.ye.payclock.MainActivity">

    <Button
        android:id="@+id/new_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_work"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/new_shift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="@string/btn_add_shift"
        android:layout_below="@+id/new_work"
        android:layout_alignLeft="@+id/new_work"
        android:layout_alignStart="@+id/new_work" />

    <Button
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stats"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/new_shift"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
